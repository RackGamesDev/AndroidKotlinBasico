<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.PrimeraActivity">
    <!--El constraintlayout obliga a los elementos a estar enganchados a un layout o a este-->
    <!--Contenido del layout-->
    <View
        android:id="@+id/view1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/app_name" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/ic_android_black_24dp"
        app:fabSize="normal"
        app:tint="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_android_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/teal_200" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="183dp"
        android:layout_height="38dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="testo"
        android:textColor="@color/teal_200"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintStart_toEndOf="@+id/view2" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="183dp"
        android:layout_height="68dp"
        android:text="testo"
        android:textColor="@color/teal_200"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/editText1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="aa"
        android:id="@+id/boton3"/>

    <Button
        android:id="@+id/boton4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="dialogo"
        app:layout_constraintBottom_toTopOf="@+id/boton3"
        app:layout_constraintEnd_toEndOf="parent" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="286dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="introduce texto"/>

    <com.google.android.material.slider.RangeSlider
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/rango1"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="100"/>

    <View
        android:id="@+id/view2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintEnd_toStartOf="@+id/view1" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextoChulo"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="asdfasdfasdfasdfasdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1" />

    <CheckBox
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/rango1"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/check1"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rango1"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="asdf" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="dsad" />
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="fasdf" />
    </RadioGroup>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/busqueda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton1" />

